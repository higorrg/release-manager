<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="001-create-clients-table" author="system">
        <createTable tableName="clients">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_code" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="company_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_email" type="varchar(100)"/>
            <column name="contact_phone" type="varchar(20)"/>
            <column name="is_active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="is_beta_partner" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="text"/>
            <column name="created_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-releases-table" author="system">
        <createTable tableName="releases">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="version_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(50)" defaultValue="MR_APROVADO">
                <constraints nullable="false"/>
            </column>
            <column name="branch_name" type="varchar(100)"/>
            <column name="commit_hash" type="varchar(40)"/>
            <column name="release_notes" type="text"/>
            <column name="prerequisites" type="text"/>
            <column name="package_url" type="varchar(500)"/>
            <column name="created_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(100)"/>
            <column name="updated_by" type="varchar(100)"/>
        </createTable>

        <addUniqueConstraint 
            tableName="releases" 
            columnNames="product_name,version" 
            constraintName="uk_releases_product_version"/>
    </changeSet>

    <changeSet id="003-create-release-status-history-table" author="system">
        <createTable tableName="release_status_history">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="release_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="previous_status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="new_status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="reason" type="text"/>
            <column name="changed_by" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="changed_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="release_status_history"
            baseColumnNames="release_id"
            referencedTableName="releases"
            referencedColumnNames="id"
            constraintName="fk_release_status_history_release"
            onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="004-create-release-client-environments-table" author="system">
        <createTable tableName="release_client_environments">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="release_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="client_code" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="environment" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="release_client_environments"
            baseColumnNames="release_id"
            referencedTableName="releases"
            referencedColumnNames="id"
            constraintName="fk_release_client_env_release"
            onDelete="CASCADE"/>

        <addUniqueConstraint 
            tableName="release_client_environments" 
            columnNames="release_id,client_code,environment" 
            constraintName="uk_release_client_env"/>
    </changeSet>

    <changeSet id="005-create-indexes" author="system">
        <createIndex tableName="releases" indexName="idx_releases_status">
            <column name="status"/>
        </createIndex>
        
        <createIndex tableName="releases" indexName="idx_releases_product_name">
            <column name="product_name"/>
        </createIndex>
        
        <createIndex tableName="release_status_history" indexName="idx_release_history_release_id">
            <column name="release_id"/>
        </createIndex>
        
        <createIndex tableName="release_client_environments" indexName="idx_client_env_client_code">
            <column name="client_code"/>
        </createIndex>
        
        <createIndex tableName="release_client_environments" indexName="idx_client_env_environment">
            <column name="environment"/>
        </createIndex>
        
        <createIndex tableName="clients" indexName="idx_clients_active">
            <column name="is_active"/>
        </createIndex>
        
        <createIndex tableName="clients" indexName="idx_clients_beta_partner">
            <column name="is_beta_partner"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>