# Exemplo de arquivo .env para produção
# Copie este arquivo para .env e configure os valores

# Database Configuration
DATABASE_NAME=release_manager
DATABASE_USER=release_manager
DATABASE_PASSWORD=your_secure_database_password

# Keycloak Configuration
KEYCLOAK_HOSTNAME=your-domain.com
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_admin_password
KEYCLOAK_CLIENT_SECRET=your_secure_client_secret
KEYCLOAK_URL=https://your-domain.com:8080

# Backend Configuration
BACKEND_PORT=8081
BACKEND_URL=https://your-domain.com:8081

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=https://your-domain.com

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# Azure AD Configuration (for Keycloak integration)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret